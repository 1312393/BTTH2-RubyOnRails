<div class="container">
  <h1>BLOGLIFE</h1>
  <div class="row">
    <div class="col-sm-8">
      <table>
        <% @articles.each do |article| %>
            <div class='card' href="/articles">
              <div class='card-block'>
                <h4 class='card-title'> <%= article.title %> </h4>
                <p class='card-text'> <%= @markdown.render(article.body).html_safe %> </p>
                <div class='card-footer'>
                  <%= link_to 'Show', article_path(article), class: 'btn btn-success' %>
                  <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-success' %>
                  <%= link_to 'Destroy', article, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-success' %>
                </div>
              </div>
            </div>
        <% end %>
      </table>
    </div>
  </div>


  <br>
  <%= link_to 'New Article', new_article_path %>

</div>
