<header>

</header>


      <table>
        <% @articles.each do |article| %>

              <div class='card' href="/articles">
                <div class='card-block'>
                  <h3 class='card-title'>  "<%=article.title%>" from "<%=article.user.email%>"</h3>
                  <p class='card-text'>  <%=article.body%> </p>
                  <div class='card-footer'>
                    <%= link_to 'Show', article_path(article), class: 'btn btn-success' %>
                    <%if article.user == current_user %>
                        <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-success' %>
                        <%= link_to 'Destroy', article, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-success' %>
                    <% end %>
                  </div>
                </div>
              </div>

        <% end %>
      </table>



  <br>
  <%= link_to 'New Article', new_article_path %>

